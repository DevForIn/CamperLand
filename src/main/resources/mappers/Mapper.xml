<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.CamperLand.CT.mapper.BoardMapper">
    <select id="getList" resultType="com.CamperLand.CT.logic.Board">
        <![CDATA[
			SELECT
				board_rownum, nickname, title, reg_date, like_count, view_count
			FROM
				board
			ORDER BY board_rownum
		]]>
    </select>
    <select id="boardCount" resultType="Integer">
        <![CDATA[
			SELECT
				count(board_rownum)
			FROM
				board
		]]>
    </select>
    <insert id="insertBoard" parameterType="com.CamperLand.CT.logic.Board">
        [<![CDATA[
            INSERT INTO board (
                board_rownum,
                nickname,
                title,
                content,
                reg_date,
                like_count,
                view_count
            ) VALUES (
                3,
                '덜순',
                #{board.title},
                #{board.content},
                NOW(),
                0,
                0
            )
        ]]>
    </insert>
</mapper>